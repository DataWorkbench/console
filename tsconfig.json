{
  "include": ["./**/*", "./**/.*"],
  "exclude": ["node_modules", "dist", "configs"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    // "allowJs": true,
    // "checkJs": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "views/*": ["views/*"],
      "assets/*": ["assets/*"],
      "stores/*": ["stores/*"],
      "utils/*": ["utils/*"],
      "contexts/*": ["contexts/*"]
    }
  }
}

{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "paths": {
      "components/*": ["components/*"],
      "views/*": ["views/*"],
      "stores/*": ["stores/*"],
      "scss/*": ["scss/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "contexts/*": ["contexts/*"]
    }
  }
}
